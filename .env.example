# Copy this file to .env and fill in secrets and environment-specific values.

# --- Core App / Security ---
DATABASE_URL=sqlite:///./default.db
SECRET_KEY=change-me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# --- Email (SendGrid) ---
SENDGRID_API_KEY=
EMAIL_SENDER=no-reply@yourdomain.com

# --- LLM / Ollama ---
OLLAMA_HOST=http://localhost:11434
LLM_MODEL=llama3.2:3b
SMALLER_LLM_MODEL=llama3.2:3b
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# --- Web Search ---
TAVILY_API_KEY=

# --- Market Data APIs ---
ALPHA_VANTAGE_API_KEY=
FINNHUB_API_KEY=
NEWS_API_KEY=

# --- Pinecone Vector DB ---
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=trading-app-rag

# --- Defaults / Preferences ---
ALPHA_VANTAGE_CRYPTO_MARKET_DEFAULT=USD
FINNHUB_CRYPTO_EXCHANGE_DEFAULT=BINANCE
FINNHUB_FX_PROVIDER_DEFAULT=OANDA
